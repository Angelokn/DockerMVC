@model IEnumerable<Produto>

<div>
    <h4 class="bg-primary text-xs-center p-1 text-white">@ViewData["Message"]</h4>

    <table class="table table-sm table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Quantidade</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.Id</td>
                    <td>@produto.Nome</td>
                    <td>@produto.Categoria</td>
                    <td>@produto.Quantidade</td>
                    <td>$@produto.Preco.ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>
</div>